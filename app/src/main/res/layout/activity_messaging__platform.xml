<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:id="@+id/messagingPlatformTopCard">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Friend Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/friendNameMessagingPlatform"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="2dp"
        android:background="@drawable/border"
        android:id="@+id/line_top"
        android:layout_alignBottom="@id/messagingPlatformTopCard" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/line_top"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="15dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_message"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/messagingPlatformBottomCard"
        android:paddingTop="5dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Send message"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_send_black_24dp"/>
    </LinearLayout>

</RelativeLayout>